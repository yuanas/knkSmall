.container {
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
  padding: 20rpx;
}

/* 授权区域 */
.auth-container {
  padding: 30rpx;
  text-align: center;
  margin-top: 200rpx;
}

.auth-tip {
  margin-bottom: 30rpx;
  color: #666;
  font-size: 28rpx;
}

.auth-button {
  width: 80%;
  margin: 0 auto;
}

/* 用户信息区域 */
.user-info {
  display: flex;
  align-items: center;
  background-color: #008cff;
  color: white;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
}

/* 过滤和排序区域 */
.filter-section {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.filter-row {
  display: flex;
  gap: 20rpx;
}

.filter-item {
  padding: 16rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  flex: 1;
}

.day-range {
  margin-bottom: 20rpx;
}

.picker {
  padding: 16rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

/* 卡片区域 */
.cards-section {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
}

.summary {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.card {
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.bank-name {
  font-size: 32rpx;
  font-weight: bold;
}

.card-type {
  font-size: 24rpx;
  color: #666;
}

.card-body {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
}

/* 添加按钮 */
.add-card {
  padding: 20rpx;
}

.add-card-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 8rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
  margin: 0;
}
