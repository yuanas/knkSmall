.container {
  padding: 20rpx;
}

.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

input, picker {
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

textarea {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid #eee;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

/* 按钮组样式 */
.button-group {
  display: flex;
  flex-direction: column;
  gap: 10px;
  margin-top: 20px;
}

.button-group button {
  width: 100%;
  margin-top: 0;
}

button {
  margin-top: 40rpx;
}
